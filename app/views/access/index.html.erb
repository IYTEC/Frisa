<% @page_title = "Admin Home" %>

<div id="st-container" class="st-container">
        <div class="st-pusher">
          <nav class="st-menu st-effect-7" id="menu-7">
          <h2 class="icon icon-lab">Admin Menu</h2>
          <ul>
            <li><%= link_to("Manage Devices", :controller => "devices") %></li>
            <li><%= link_to("Manage Accessories", :controller => "accessories") %></li>
            <% if @admins.admin_type == "Super" %>
			<li><%= link_to("Manage Administrators", :controller => "admins") %></li>
			<% end %>
            <li><%= link_to("Manage Accessories Category", :controller => "access_categories") %></li>
          </ul>
        </nav>
        
          <div class="st-content">
            <div class="st-content-inner">
              <div id="st-trigger-effects">
              <button class="btn btn-default" style="border-radius: 0;" data-effect="st-effect-7">Admin Menu</button>
            </div>
            
            <ul class="grid cs-style-4">
            	<% @accessories.each do |accessory|  %>
			    <li>
			      <figure>
			        <%= image_tag accessory.photo.url(:medium) %> 
			        <figcaption>
			          <h3><%= accessory.name %></h3>
			          <span>Face Down</span>
			          <%= link_to("Show", :controller => "accessories", :action => "show", :id => accessory.id) %>
			        </figcaption>
			      </figure>
			    </li>
			    <% end %>
			  </ul>
			   
            </div>
          </div>
        </div>
    </div>
    