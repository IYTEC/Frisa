<% @page_title = "Admin Login" %>

<%= link_to("<< Back to Menu", {:controller => "access", :action => "index"}) %><br>
<% if !flash[:notice].blank? %>
	<p><%= flash[:notice] %></p>
<% end %>
<h2>Login Form</h2>

<%= form_tag(:action => "attempt_login") do %>
<table>
	<tr>
	<th><%= label_tag(:username) %></th>
	<td><%= text_field_tag(:username) %></td>
	</tr>
	<tr>
	<th><%= label_tag(:password) %></th>
	<td><%= password_field_tag(:password) %></td>
	</tr>
<% end %>
</table>
<%= submit_tag("Log In") %>