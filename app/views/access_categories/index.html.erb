<% @page_title = "Category Home" %>

<%= link_to("<< Back to Menu", {:controller => "access", :action => "index"}) %><br>
<% if !flash[:notice].blank? %>
	<p><%= flash[:notice] %></p>
<% end %>
<h2>Accessories Category</h2><br>
<%= link_to("Add New Category", {:action => "new"}) %>
<table>
<tr>
	<th>Name</th>
	<th>Description</th>
	<th>Created at</th>
	<th>Updated at</th>
</tr>
<% @categories.each do |category| %>
<tr>
	<td><%= category.name %></td>
	<td><%= category.description %></td>
	<td><%= category.created_at %></td>
	<td><%= category.updated_at %></td>
	<td>
		<%= link_to("Show", {:action => "show", :id => category.id}, :class => "action show") %>
		<%= link_to("Edit", {:action => "edit", :id => category.id}, :class => "action edit") %>
		<%= link_to("Delete", {:action => "delete", :id => category.id}, :class => "action delete") %>
	</td>
</tr>
<% end %>
</table>