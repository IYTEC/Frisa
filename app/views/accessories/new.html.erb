<% @page_title = "New Accessory" %>

<%= link_to("<< Back to Menu", {:controller => "access", :action => "index"}) %><br>
<%= error_messages_for(@accessory) %>
<%= link_to("<< Back to Accessories ", :action => "index") %>
<h2>Create Accessory</h2>
<%= form_for :accessory, :url => {:action => "create"} do |f| %>
	<table>
		<tr>
			<th><%= f.label(:photo) %></th>
			<td><%= f.file_field(:photo) %></td>
		</tr>
		<tr>
			<th><%= f.label(:name) %></th>
			<td><%= f.text_field(:name) %></td>
		</tr>	
		<tr>
			<th><%= f.label(:feature) %></th>
			<td><%= f.text_area(:feature) %></td>
		</tr>
		<tr>
			<th><%= f.label(:access_category_id, "Category") %></th>
			<td><%= f.select(:access_category_id, @access_category.map {|s| [s.name, s.id]}) %></td>
		</tr>	
		<tr>
			<th><%= f.label(:price) %></th>
			<td><%= f.text_field(:price) %></td>
		</tr>	
		<tr>
			<th><%= f.label(:other_info) %></th>
			<td><%= f.text_field(:other_info) %></td>
		</tr>
		<tr>
			<th><%= f.label(:available) %></th>
			<td><%= f.check_box(:available) %></td>
		</tr>	
	</table>
	<%= submit_tag("Create Accessory") %>
<% end %>